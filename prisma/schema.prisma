// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN

  @@map("UserRole")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String?   // Optional for OAuth users
  role      UserRole  @default(USER)
  image     String?
  emailVerified DateTime?
  resetToken String?
  resetTokenExpiry DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  addresses Address[]
  orders    Order[]

  @@index([role])
  @@map("users")
}

model Address {
  id          String   @id @default(uuid())
  userId      String?  // Optional for guest checkout
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullName    String
  phone       String?
  email       String?
  addressLine1 String
  addressLine2 String?
  city        String
  region      String?  // State/Region
  postalCode  String
  country     String   @default("Ghana")
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      Order[]  @relation("ShippingAddress")

  @@index([userId])
  @@map("addresses")
}

model PromoCode {
  id            String   @id @default(uuid())
  code          String   @unique
  description   String?
  discountType  DiscountType // "percentage" or "fixed"
  discountValue Float
  minPurchase   Float?   @default(0)
  maxDiscount   Float?   // For percentage discounts
  usageLimit    Int?     // Total usage limit
  usedCount     Int     @default(0)
  isActive      Boolean  @default(true)
  validFrom     DateTime @default(now())
  validUntil    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("promoCodes")
}

model Order {
  id                  String      @id @default(uuid())
  orderNumber         String      @unique // Human-readable order number
  userId              String?
  user                User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  status              OrderStatus @default(PENDING)
  totalAmount         Float
  subtotal            Float
  shippingCost        Float       @default(0)
  discountAmount      Float       @default(0)
  promoCode           String?
  paymentMethod       String      // "card", "mobile_money"
  paymentStatus       PaymentStatus @default(PENDING)
  stripePaymentIntentId String?
  stripeSessionId     String?     // Stripe checkout session ID
  paystackReference   String?     // Paystack payment reference
  flutterwaveTxRef   String?      // Flutterwave transaction reference
  mobileMoneyTransactionId String?
  mobileMoneyProvider String?     // "mtn", "vodafone", "airteltigo"
  mobileMoneyPhone    String?
  idempotencyKey      String?     @unique // Prevent duplicate payments
  webhookProcessed   Boolean     @default(false) // Track if webhook processed
  items               OrderItem[]
  shippingAddressId   String?
  shippingAddress     Address?    @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  deliveryMethod      String?     // "standard", "express", "pickup"
  deliveryNotes       String?
  email               String      // For guest checkout
  phone               String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@index([userId])
  @@index([stripePaymentIntentId])
  @@index([email])
  @@map("orders")
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  productName String
  productImage String?
  price       Float
  quantity    Int
  size        String?
  color       String?
  createdAt   DateTime @default(now())

  @@index([orderId])
  @@map("orderItems")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED

  @@map("OrderStatus")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED

  @@map("PaymentStatus")
}

enum DiscountType {
  PERCENTAGE
  FIXED

  @@map("DiscountType")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  image       Json     // Array of image URLs or single image object
  category    String
  subCategory String
  sizes       Json     // Array of sizes with stock info
  bestseller  Boolean  @default(false)
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([subCategory])
  @@map("products")
}
